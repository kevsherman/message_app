<% if @user %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li><br/>
    <% end %>
  <% end %>
<% end %>

<div class="container">

  <form class="form-signin" action='/users' method='post' role="form" method='post' action='/login'>
    <h2 class="form-signin-heading">Sign Up to Start Receiving Messages</h2>
    <input type="text" name="firstname" class="form-control" placeholder="First name" required="" autofocus="">
    <input type="text" name="lastname" class="form-control" placeholder="Last name" required="" autofocus="">
    <input type="email" name="email" class="form-control" placeholder="Email" required="" autofocus="">
    <input type="text" name="phone" class="form-control" placeholder="Phone Number" required="" autofocus="">
    <input type="password" name="password" class="form-control" placeholder="Password" required="">
    
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
  </form>

</div>  

<div><a href='/login'>Already a User?</a></div>
