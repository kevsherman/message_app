<h2><%= @event.name %></h2>

<% if @event.check_status == false%>
<h3>This event is now closed</h3>
<%end%>

<h4>Event Details</h4>

<ul>
  <%=@event.name%>
  <li><%=@event.details%></li>
  <li>Date:<%=@event.date%></li>
  <li>URL:  <a href='http://63f9cdcf.ngrok.com/events/call/<%=@event.url%>'>http://63f9cdcf.ngrok.com/events/call/<%=@event.url%></li>
</ul>

<hr/>

<% @messages.each.with_index(1) do |message, index| %>

<h3><%=index%>) <a href="<%= message.recording_url %>">From: <%=message.from_phone%></h3>

<%end%>
<div><a href='/users/<%= session[:id]%>'>Back to My Events</a></div>
<div><a href='/logout'>Logout</a></div>

