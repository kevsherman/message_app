<h2><%= @event.name %></h2>

<% if @event.check_status %>
  <h3>Enter your phone number:</h3>

  <br/>

  <form action='/events/call' method='post'>
    <div>
      <input type='phone' name='phone'>
      <input type='hidden' name='url' value='<%=@event.url%>'>
    </div>
    <div>
      <input type="submit">
    </div>
  </form>


<%else%>
  <h3> Sorry, you're too late!</h3>
<% end %>




